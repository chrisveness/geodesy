{
    "name": "geodesy",
    "description": "Libraries of geodesy functions",
    "homepage": "http://www.movable-type.co.uk/scripts/latlong.html",
    "repository": { "type": "git", "url": "https://github.com/chrisveness/geodesy" },
    "keywords": [ "geodesy", "latitude", "longitude", "distance", "bearing", "haversine", "vincenty", "rhumb", "ellipsoid", "datum", "wgs84", "utm", "mgrs" ],
    "author": "Chris Veness",
    "version": "1.0.2",
    "license": "MIT",
    "main": "npm.js",
    "bugs": "https://github.com/chrisveness/geodesy/issues",
    "scripts": {
        "test": "mocha test/*.js",
        "lint": "eslint ."
    },
    "devDependencies": {
        "chai": "^3.4.1",
        "eslint": "^1.10.2",
        "jsdoc": "^3.4.0",
        "mocha": "^2.3.4",
        "npm-check": "^4.1.3",
        "npm-check-updates": "^2.5.1"
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "node": true,
            "mocha": true
        },
        "extends": "eslint:recommended",
        "rules": {
            "comma-dangle": [ 2, "always-multiline" ],
            "curly": [ 2, "multi-line" ],
            "indent": [ 2, 4, { "SwitchCase": 1 } ],
            "key-spacing": [ 1, { "align": "value" } ],
            "no-console": 1,
            "no-redeclare": 1,
            "no-unused-vars": 1,
            "object-curly-spacing": [ 2, "always" ],
            "quotes": [ 2, "single", "avoid-escape" ],
            "strict": [ 2, "global" ]
        }
    }
}
